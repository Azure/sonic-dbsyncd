{
    "version": 1,
    "disable_existing_loggers": false,
    "formatters": {
        "simple": {
            "format": "lldpsyncd[%(name)s] - %(process)s - %(levelname)s - %(message)s"
        }
    },

    "handlers": {
        "syslog": {
            "facility": "daemon",
            "class": "logging.handlers.SysLogHandler",
            "level": "INFO",
            "formatter": "simple",
            "address": "/dev/log"
        }
    },

    "loggers": {
        "my_module": {
            "level": "INFO",
            "handlers": ["syslog"]
        }
    },

    "root": {
        "level": "INFO",
        "handlers": ["syslog"]
    }
}
